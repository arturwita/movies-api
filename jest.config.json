{
    "verbose": true,
    "collectCoverage": true,
    "testRunner": "jasmine2",
    "testEnvironment": "node",
    "setupFiles": ["dotenv/config"],
    "roots": ["<rootDir>/"],
    "collectCoverageFrom": [
        "<rootDir>/src/**/*.ts",
        "!<rootDir>/src/**/index.ts",
        "!<rootDir>/src/dto/*.dto.ts",
        "!<rootDir>/src/dependency-injection/container.ts",
        "!<rootDir>/src/router/*.router.ts",
        "!<rootDir>/src/util/logger.ts"
    ],
    "modulePathIgnorePatterns": ["<rootDir>/dist/"],
    "transform": {
        "^.+\\.(ts)$": "ts-jest"
    }
}
